{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "paths": {
      "~/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    ".nuxt",
    "dist",
    "node_modules"
  ]
}
